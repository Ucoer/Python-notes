#while
i = 3
while i != 0:
    print("meow")
#print infinite meow
#Ctrl C to stop

i = 3
while i != 0:
    print("meow")
    i = i - 1
#same as
#coding would like to start from zero
i = 0
while i < 3:
    print("meow")
    i = i + 1
#same as
i += 1

#for
#same as
for i in [0, 1, 2]:
    print("meow")
#same as
for i in range(3):
    print("meow")
#i can be changed to any variable, even _

print("meow"*3)
#results1: 
meowmeowmeow
##
#print cannot start a new line, even we write 2 prints the outcomes are still in the same line

print("meow\n"*3)
# \n: start a new line, "meow + empty line"*3
#results2:
meow
meow
meow

##
#print line ends with \n itself, the last empty line in "meow + empty line", so we have a new empty line here

print("meow\n"*3, end="")
#results3:
meow
meow
meow
##
#now we end with nothing

n = int(input("what's n? "))
if n < 0:
  n = int(input("what's n? "))
  if n < 0:
    n = int(input("what's n? "))
#same as
while True:
    n = int(input("What's n? "))
    if n < 0:
        continue
    else:
        break
#same as
while True:
    n = int(input("What's n? "))
    if n >= 0:
        break
#
while True:
    n = int(input("What's n? "))
    if n > 0:
        break
    
for _ in range(n):
    print("meow")
